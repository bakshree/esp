APPNAME := tiled_app

COH_CODE ?= 1
NUM_DEVICES ?= 1
COMPUTE_STAGES ?= 1
COMP_MODE ?= 0
COMPUTE_INTENSITY ?= 150

ifneq ("$(CFA)", "")
        EXTRA_CFLAGS+=-DCFA=1
endif


EXTRA_CFLAGS += -DCOH_CODE=$(COH_CODE)
EXTRA_CFLAGS += -DNUM_DEVICES=$(NUM_DEVICES)
EXTRA_CFLAGS += -DCOMPUTE_STAGES=$(COMPUTE_STAGES)
EXTRA_CFLAGS += -DCOMP_MODE=$(COMP_MODE)
EXTRA_CFLAGS += -DCOMPUTE_INTENSITY=$(COMPUTE_INTENSITY)

include $(DRIVERS)/common_bare.mk
